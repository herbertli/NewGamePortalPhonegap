<?xml version='1.0' encoding='utf-8'?>
<widget id="phonegap.gameportal" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>GamePortal</name>
    <description>
        Game Portal for Social Multiplayer Games.
    </description>
    <content src="https://yoav-zibin.github.io/NewGamePortal" />
    <access origin="*" />
    <access origin="https://yoav-zibin.github.io/NewGamePortal/*" />
    <allow-navigation href="https://yoav-zibin.github.io/NewGamePortal/*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <engine name="ios" spec="^4.5.4" />
</widget>
